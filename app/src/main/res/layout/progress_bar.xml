<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/transparent"
    android:gravity="center"
    android:minHeight="@dimen/standard_item_height"
    android:orientation="vertical"
    android:padding="@dimen/margin_full">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/pbHeaderProgress"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/progressMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_full"
            android:layout_marginRight="@dimen/margin_full"
            android:textSize="@dimen/text_body"
            android:textColor="@color/secondary_text"
            android:textStyle="bold"
            tools:text="Loading..." />

    </LinearLayout>

    <Button
        android:id="@+id/retryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_full"
        android:textSize="@dimen/text_body"
        android:textStyle="bold"
        android:background="@color/transparent"
        android:textColor="@color/blue_gray_1"
        tools:text="Retry" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/article_side_margin"
        android:layout_marginStart="@dimen/article_side_margin"
        android:layout_marginTop="@dimen/margin_full"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/line_spacing_extra_std"
        android:maxLength="140"
        android:textColor="@color/black_87"
        android:textSize="@dimen/text_subheading"
        android:textStyle="bold"
        tools:text="A side ഇന്റര്‍നെറ്റ് navigation menu with icons" />

</LinearLayout>